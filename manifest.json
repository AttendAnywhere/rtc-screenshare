{
  "name": "rtc.io Desktop Screensharing Chrome Extension",
  "version": "1.0",
  "description": "Provides access to the chrome.desktopCapture api when enabled",
  "manifest_version": 2,
  "background": {
    "scripts": ["screenshare.js"],
    "persistent": false
  },

  "permissions": [
    "desktopCapture",
    "activeTab",
    "tabs"
  ],

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["screenshare-content.js"],
    "run_at": "document_start"
  }]
}
